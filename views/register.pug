extends layout 

block content 
    form(method="POST" action="/user/register") 
        h2  Register
        #form-group  
            label username  
            input.form-control(name ='username', type ='text', maxlength="20", required)  
        #form-group 
            label user e-mail address  
            input.form-control(name ='email', type ='text',maxlength="50", required)
        #form-group 
            label(for ='phone') user phone number 
            input.form-control(name ='phone', type ='number',maxlength="10" )
        #form-group 
            label Password  
            input.form-control(name ='password', type ='password',maxlength="20", required) 
        #form-group 
            label Confirm Password  
            input.form-control(name ='password2', type ='text',maxlength="20", required)       
        br    
        input.btn.btn-primary(type='submit', value ='SUBMIT')