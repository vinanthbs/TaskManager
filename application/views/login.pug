extends layout 

block content 
    form(method="POST" action="/user/login") 
        h2  Login  
        #form-group 
            label user e-mail address  
            input.form-control(name ='email', type ='text',maxlength="50", required)
        #form-group 
            label Password  
            input.form-control(name ='password', type ='password',maxlength="20", required)
        a.link-warning(href='/user/forgetPassword') Forget Password ?          
        br    
        input.btn.btn-primary(type='submit', value ='SUBMIT')